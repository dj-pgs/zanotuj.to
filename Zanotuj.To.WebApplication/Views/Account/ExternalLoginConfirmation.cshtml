@model Zanotuj.To.WebApplication.Models.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Rejestracja";
}
<div class="main container flex">
    <div class="content">
        <h2>@ViewBag.Title.</h2>
        <h3>Połączono z kontem na @ViewBag.LoginProvider</h3>

        @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <h4>Dokończ rejestrację</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <p class="text-info">
                Zostałeś zalogowany przez: <strong>@ViewBag.LoginProvider</strong>.
                Aby ukończyć proces rejestracji proszę wprowadź swój adres email oraz nick.
            </p>
            <div class="form-group text-color">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group text-color">
                @Html.LabelFor(m => m.Nick)
                @Html.TextBoxFor(m => m.Nick, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Nick, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                <input type="submit" class="btn btn-primary" value="Zarejestruj" />

            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
