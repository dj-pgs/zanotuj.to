@model Zanotuj.To.WebApplication.Models.AccountLoginViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Zanotuj.to</title>
    <script src="~/bower_components/pgs-bootstrap-theme/dist/scripts.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="~/bower_components/pgs-bootstrap-theme/dist/styles.css">
    <link rel="stylesheet" href="~/Content/styles.css">
</head>

<body id="login">
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <h1 class="navbar-brand"><img src="~/assets/logo.png" alt="Zanotuj.to"> Zanotuj.to
            </h1>
        </div>
        <!--/.nav-collapse -->
    </div>
</nav>
<div class="main container flex">
    <div class="content">
        <h2>Logowanie</h2>
        <h4>Nie masz jeszcze konta? <a href="#">Zarejestruj się</a></h4>
        @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
        {
            <fieldset>
                <div class="form-group text-color">
                    @Html.LabelFor(m => m.Nick)
                    @Html.TextBoxFor(m => m.Nick, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Nick, "", new {@class = "text-danger"})
                </div>
                <div class="form-group text-color">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </fieldset>
            <input type="submit" class="btn btn-primary" value="Zaloguj"/>
            <div class="divider">
                <div>LUB</div>
            </div>
            <div class="fbButton">
                <img src="~/assets/fb.jpg">
            </div>
        }
    </div>
</div>
<footer>
    <div class="container">&copy; 2016 zanotuj.to</div>
</footer>
</body>

</html>

